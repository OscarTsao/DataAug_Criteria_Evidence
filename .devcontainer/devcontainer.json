{
  "name": "Template - Python",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip && pip install -e '.[dev]'",
  "remoteUser": "vscode"
}
